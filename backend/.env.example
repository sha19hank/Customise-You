# Environment Variables Template

# =====================================================
# BACKEND CONFIGURATION
# =====================================================

# Environment
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# =====================================================
# DATABASE CONFIGURATION
# =====================================================

# PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_USER=customiseyou_user
DB_PASSWORD=secure_password_here
DB_NAME=customiseyou
DATABASE_URL=postgresql://customiseyou_user:secure_password_here@localhost:5432/customiseyou

# Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_IDLE_TIMEOUT=30000

# =====================================================
# REDIS CONFIGURATION
# =====================================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379/0

# =====================================================
# AUTHENTICATION
# =====================================================

JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-chars
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=30d

# OAuth
GOOGLE_OAUTH_CLIENT_ID=xxx.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your-google-secret
APPLE_OAUTH_CLIENT_ID=your-apple-client-id
APPLE_OAUTH_CLIENT_SECRET=your-apple-secret

# =====================================================
# PAYMENT GATEWAYS
# =====================================================

# Stripe
STRIPE_PUBLIC_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Razorpay
RAZORPAY_KEY_ID=key_test_...
RAZORPAY_KEY_SECRET=key_secret_...
RAZORPAY_WEBHOOK_SECRET=webhook_secret_...

# PayPal
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-secret
PAYPAL_MODE=sandbox

# =====================================================
# STORAGE
# =====================================================

# AWS S3
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=...
AWS_S3_BUCKET=customiseyou-dev
AWS_S3_REGION=us-east-1
AWS_CLOUDFRONT_DOMAIN=d123456.cloudfront.net

# Alternative: Google Cloud Storage
GCS_PROJECT_ID=your-gcs-project
GCS_BUCKET=customiseyou-gcs
GCS_KEY_FILE=./gcs-key.json

# =====================================================
# EMAIL SERVICE
# =====================================================

# SendGrid
SENDGRID_API_KEY=SG.xxxxx...
SENDGRID_FROM_EMAIL=noreply@customiseyou.com
SENDGRID_FROM_NAME=CustomiseYou

# Alternative: Mailgun
MAILGUN_API_KEY=key-...
MAILGUN_DOMAIN=mg.customiseyou.com

# =====================================================
# SMS SERVICE
# =====================================================

# Twilio
TWILIO_ACCOUNT_SID=AC...
TWILIO_AUTH_TOKEN=...
TWILIO_PHONE_NUMBER=+1234567890

# Alternative: AWS SNS
AWS_SNS_REGION=us-east-1

# =====================================================
# NOTIFICATIONS
# =====================================================

# Firebase Cloud Messaging
FCM_PROJECT_ID=your-fcm-project-id
FCM_PRIVATE_KEY=...
FCM_CLIENT_EMAIL=firebase-adminsdk@...

# =====================================================
# ANALYTICS & MONITORING
# =====================================================

# Sentry
SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# Google Analytics
GOOGLE_ANALYTICS_ID=UA-XXXXX-Y

# Mixpanel
MIXPANEL_TOKEN=xxx...

# =====================================================
# CORS & SECURITY
# =====================================================

CORS_ORIGIN=http://localhost:3001,http://localhost:3002,https://customiseyou.com
CSRF_SECRET=your-csrf-secret-key

# =====================================================
# FRONTEND CONFIGURATION
# =====================================================

NEXT_PUBLIC_API_URL=http://localhost:3000/api/v1
NEXT_PUBLIC_WS_URL=ws://localhost:3000
NEXT_PUBLIC_STRIPE_PUBLIC_KEY=pk_test_...
NEXT_PUBLIC_GOOGLE_OAUTH_ID=xxx.apps.googleusercontent.com

# =====================================================
# ADMIN CONFIGURATION
# =====================================================

ADMIN_EMAIL=admin@customiseyou.com
ADMIN_DEFAULT_PASSWORD=temporary_password

# =====================================================
# RATE LIMITING
# =====================================================

RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# =====================================================
# SESSION CONFIGURATION
# =====================================================

SESSION_SECRET=your-session-secret-key
SESSION_TIMEOUT=3600000

# =====================================================
# THIRD-PARTY SERVICES
# =====================================================

# Slack (for notifications)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...

# GitHub (for deployment)
GITHUB_OAUTH_TOKEN=ghp_...

# =====================================================
# FEATURE FLAGS
# =====================================================

FEATURE_PAYMENT_RAZORPAY_ENABLED=true
FEATURE_PAYMENT_PAYPAL_ENABLED=false
FEATURE_SELLER_ANALYTICS_ENABLED=true
FEATURE_AI_RECOMMENDATIONS_ENABLED=true
FEATURE_CHATBOT_ENABLED=true
FEATURE_FRAUD_DETECTION_ENABLED=true

# =====================================================
# DEVELOPMENT ONLY
# =====================================================

DEBUG=customiseyou:*
MOCK_EMAIL_SERVICE=false
MOCK_SMS_SERVICE=false
MOCK_PAYMENT_SERVICE=false
