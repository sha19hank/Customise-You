{
  "name": "customiseyou-backend",
  "version": "1.0.0",
  "description": "CustomiseYou - Global Commerce Platform Backend API",
  "main": "dist/main.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "build": "tsc",
    "start": "node dist/main.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:e2e": "jest --config ./jest.e2e.config.js",
    "migration:generate": "typeorm migration:generate",
    "migration:run": "typeorm migration:run",
    "migration:revert": "typeorm migration:revert",
    "db:seed": "ts-node src/seeds/index.ts",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "docker:build": "docker build -t customiseyou-backend .",
    "docker:run": "docker run -p 3000:3000 customiseyou-backend"
  },
  "keywords": [
    "e-commerce",
    "customization",
    "marketplace",
    "api",
    "nodejs"
  ],
  "author": "CustomiseYou Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "dotenv": "^16.0.3",
    "joi": "^17.9.2",
    "typescript": "^5.0.0",
    "pg": "^8.9.0",
    "redis": "^4.6.5",
    "jsonwebtoken": "^9.0.0",
    "bcryptjs": "^2.4.3",
    "axios": "^1.4.0",
    "socket.io": "^4.6.1",
    "socket.io-client": "^4.6.1",
    "bull": "^4.10.4",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.0",
    "aws-sdk": "^2.1400.0",
    "stripe": "^12.0.0",
    "razorpay": "^2.9.1",
    "paypal-rest-sdk": "^1.8.1",
    "sendgrid": "^7.7.0",
    "twilio": "^3.88.0",
    "winston": "^3.8.2",
    "express-rate-limit": "^6.7.0",
    "compression": "^1.7.4",
    "class-validator": "^0.14.0",
    "class-transformer": "^0.5.1",
    "reflect-metadata": "^0.1.13",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.0.0",
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^9.0.2",
    "ts-node-dev": "^2.0.0",
    "ts-node": "^10.9.1",
    "@types/bcryptjs": "^2.4.2",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.40.0",
    "prettier": "^2.8.8",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.12"
  }
}
